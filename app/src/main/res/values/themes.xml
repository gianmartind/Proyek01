<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Proyek01" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkBlue</item>
        <item name="colorPrimaryVariant">@color/darkBlue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/editBlue</item>
        <item name="colorSecondaryVariant">@color/editBlue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/CustomTextViewStyle</item>
        <item name="android:buttonStyle">@style/CustomButtonStyle</item>
    </style>
    <style name="DialogTheme" parent="Theme.Proyek01">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    <style name="CustomTextViewStyle" parent="Theme.Proyek01">
        <item name="android:fontFamily">@font/custom_font</item>
    </style>
    <style name="CustomButtonStyle" parent="Theme.Proyek01">
        <item name="android:fontFamily">@font/custom_font</item>
    </style>
    <style name="NoToolbar" parent="Theme.Proyek01">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>